<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="#232728">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who are you?"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="32dp"
            android:paddingBottom="16dp"/>

        <EditText android:id="@+id/input_firstname"

            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:inputType="text"
            android:hint="First Name"
            android:textColor="@color/colorAccent"/>

        <EditText android:id="@+id/input_lastname"

            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:inputType="text"
            android:hint="Last Name"
            android:textColor="@color/colorAccent"/>

        <EditText android:id="@+id/input_gender"

            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:inputType="text"
            android:hint="Gender"
            android:textColor="@color/colorAccent"/>



        <EditText android:id="@+id/input_introduction"

            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:inputType="text"
            android:hint="Introduction: Briefly describe yourself!"
            android:maxLength="300"
            android:textColor="@color/colorAccent"/>

        <EditText android:id="@+id/input_qualifications"

            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:inputType="text"
            android:hint="Qualifications"
            android:maxLength="150"
            android:textColor="@color/colorAccent"/>

        <EditText android:id="@+id/input_website"

            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:inputType="text"
            android:hint="Website"
            android:textColor="@color/colorAccent"/>

        <Button
            android:id="@+id/btn_finish"
            android:paddingTop="24dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Finish" />
    </LinearLayout>


</ScrollView>