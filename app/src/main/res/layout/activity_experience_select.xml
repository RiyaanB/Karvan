<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="#232728">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Do you have experience working with Non-native speakers?"
            android:background="#232728"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="24dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorPrimary"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">
            <TextView
                android:textSize="16dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_width="280dp"
                android:layout_marginRight="8dp"
                android:layout_height="wrap_content"
                android:text="Experience with Non-native speakers"/>
            <CheckBox
                android:id="@+id/cb_nonnative"
                android:layout_gravity="right|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorPrimary"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">
            <TextView
                android:textSize="16dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_width="280dp"
                android:layout_marginRight="8dp"
                android:layout_height="wrap_content"
                android:text="Experience with Refugees"/>
            <CheckBox
                android:id="@+id/cb_refugees"
                android:layout_gravity="right|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List any qualifications here (these will be displated on your profile)"
            android:textColor="#FFFFFF"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/et_qualifications"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:inputType="text"
            android:gravity="center"
            android:hint="e.g. 'Certificate in teaching ESl for \nrefugees'"
            android:textColor="@color/colorAccent"
            android:padding="32dp" />

        <Button
            android:layout_marginTop="32dp"
            android:id="@+id/btn_done_meeting_preferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_gravity="center"
            android:onClick="clickExperienceDone"/>
    </LinearLayout>

</ScrollView>